<%- include("../partials/header") %>
<div class="row">
    <div class="container">
        <h1 style="text-align: center;">Edit Comment</h1>

        <div style="width: 30%; margin: 0 auto">
            <form action="/campgrounds/<%= idCamp %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">  
                    <input class="btn btn-default btn-lg btn-block " type="submit">
                </div>
            </form>
            <a href="/campgrounds/<%= idCamp %>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>