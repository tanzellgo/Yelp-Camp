<%- include ("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked camp grounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds</h3>
        </div>
    </div>  

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% venues.forEach((v)=>{ %>
            <div class="col-md-3 col-sm-6" style="margin-bottom: 70px;"> 
                <div class="thumbnail">
                    <img src="<%= v.img %>" alt="<%= v.name %>" >
                </div>
                <div class="caption">
                    <h4><%= v.name %></h4>
                </div>
                <div>
                    <a href="/campgrounds/<%= v._id%>" class="btn btn-primary"> More Info </a>
                </div>
            </div> 
        <% }) %>
    </div> 

</div>


<%- include ("../partials/footer") %>