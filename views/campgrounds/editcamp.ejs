<%- include("../partials/header") %>
<div class="row">
    <div class="container">
        <h1 style="text-align: center;">Edit <%= camp.name %></h1>

        <div style="width: 30%; margin: 0 auto">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= camp.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[img]" value="<%= camp.img %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" value="<%= camp.price %>" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value="<%= camp.description %>">
                </div>
                <div class="form-group">  
                    <input class="btn btn-default btn-lg btn-block " type="submit">
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>   
    </div>
</div>


<%- include("../partials/footer") %>